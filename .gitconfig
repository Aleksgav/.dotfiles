# This is Git's per-user configuration file.
[user]
  email = alex.phyp@gmail.com
  name = Gavrishchuk Aleksandr

[core]
  excludesfile = ~/.gitignore-system
  editor = vim
  autocrlf = input

[includeIf "gitdir:~/work_projects/"]
  path = ~/work_projects/.gitconfig_override

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[interactive]
  diffFilter = delta --color-only --features=interactive

[include]
  path = ~/.gitconfig_delta

[delta]
#  features = collared-trogon 
#  features = tangara-chilensis
  features = woolly-mammoth
  line-numbers = true
  navigate = true
  side-by-side = true

[delta "interactive"]
  keep-plus-minus-markers = false


